<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground2"
    tools:context=".Agent_signup">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="135dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:id="@+id/agent_ersignupid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/signup"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Create your account"
                android:textSize="35sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:fontFamily="@font/mandala"
                android:layout_marginTop="10dp"

                />



            <EditText
                android:id="@+id/agentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Enter Your Name"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/agent_register_button"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"

                />
            <EditText
                android:id="@+id/agentPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Phone Number"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/agent_register_button"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="10dp"
                />

            <EditText
                android:id="@+id/agentEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/agent_register_button"
                android:drawableStart="@drawable/email_logo"
                android:drawablePadding="10dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/agentNidnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/agent_register_button"
                android:drawableStart="@drawable/nid_24"
                android:drawablePadding="10dp"
                android:hint="NID Number"
                android:inputType="number"

                />


            <EditText
                android:id="@+id/agentPass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/agent_register_button"
                android:drawableStart="@drawable/password"
                android:drawablePadding="10dp"
                />
            <EditText
                android:id="@+id/agentPass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/agent_register_button"
                android:drawableStart="@drawable/password"
                android:drawablePadding="10dp"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By registering, you are agreeing to our \nTerms of use and Privacy Policy"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:layout_marginStart="39dp"
                />


            <android.widget.Button
                android:id="@+id/registerbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="REGISTER"
                android:textStyle="normal"
                android:layout_marginTop="18dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/mandala"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/forbutton"
                />

            <TextView
                android:id="@+id/signupThekeLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log In?"
                android:gravity="center"
                android:textColor="@color/navyblue"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="13dp"

                />





        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>