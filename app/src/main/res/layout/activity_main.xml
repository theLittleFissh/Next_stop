<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/mainbackground2"
    >

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="135dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:id="@+id/protomlinear"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">  <!--card view er vitore linear layout-->




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginTop="30dp"
            android:background="@drawable/switch_button"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >
            <TextView
                android:id="@+id/loginas_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/log_in"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:textColor="@color/textcolor"
                android:textSize="16sp"
                android:textStyle="bold|normal"
                android:background="@drawable/switch_track"
                />


            <TextView
                android:id="@+id/loginas_agent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/agent_login"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:textColor="#373333"
                android:textSize="16sp"
                android:textStyle="bold|normal"

                />



        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="25dp">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:shapeAppearanceOverlay="@style/Button1"
                    android:hint="Email or Number"
                    app:boxStrokeColor="#4E4A4A"
                    app:boxStrokeWidth="1dp"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email1"
                        android:ems="10"
                        android:textSize="13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:inputType="textPersonName|textEmailAddress"
                        android:textColor="@color/black"

                         />
                </com.google.android.material.textfield.TextInputLayout>







                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:shapeAppearanceOverlay="@style/Button1"
                    android:hint="Password"
                    app:boxStrokeColor="#4E4A4A"
                    app:boxStrokeWidth="1dp"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password1"
                        android:ems="10"
                        android:textSize="13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        app:endIconMode="password_toggle"

                        />
                </com.google.android.material.textfield.TextInputLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:text="Forget Password?"
                    android:textStyle="normal|bold"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="textEnd"
                    android:textColor="#3949AB"
                    />

            </LinearLayout>










            <Button
                android:id="@+id/sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG IN"
                android:fontFamily="sans-serif-black"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:elevation="15dp"
                android:gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:textColor="@color/textcolor"
                android:layout_gravity="center"
                app:shapeAppearanceOverlay="@style/Button1"
                app:backgroundTint="@color/pinkcolor"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                />






        </LinearLayout> <!--card view er vitore linear layout-->
        <LinearLayout
            android:id="@+id/duinumberlinear"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">  <!--card view er vitore linear agent er jonno layout-->




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:layout_marginTop="30dp"
                android:background="@drawable/switch_button"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
                <TextView
                    android:id="@+id/loginas_user2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/log_in"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|normal"
                    android:background="@color/transparent"
                    />


                <TextView
                    android:id="@+id/loginas_agent2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/agent_login"
                    android:paddingTop="5dp"
                    android:textAlignment="center"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"
                    android:textColor="#373333"
                    android:textSize="16sp"
                    android:textStyle="bold|normal"
                    android:background="@drawable/switch_track"

                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="25dp">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:shapeAppearanceOverlay="@style/Button1"
                    android:hint="Email or Number"
                    app:boxStrokeColor="#4E4A4A"
                    app:boxStrokeWidth="1dp"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email2"
                        android:ems="10"
                        android:textSize="13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:inputType="textPersonName|textEmailAddress"
                        android:textColor="@color/black"

                        />
                </com.google.android.material.textfield.TextInputLayout>







                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:shapeAppearanceOverlay="@style/Button1"
                    android:hint="Password"
                    app:boxStrokeColor="#4E4A4A"
                    app:boxStrokeWidth="1dp"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password2"
                        android:ems="10"
                        android:textSize="13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        app:endIconMode="password_toggle"

                        />
                </com.google.android.material.textfield.TextInputLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:text="Forget Password?"
                    android:textStyle="normal|bold"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="textEnd"
                    android:textColor="#3949AB"
                    />

            </LinearLayout>







            <Button
                android:id="@+id/sign_in2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG IN"
                android:fontFamily="sans-serif-black"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:elevation="15dp"
                android:gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:textColor="@color/textcolor"
                android:layout_gravity="center"
                app:shapeAppearanceOverlay="@style/Button1"
                app:backgroundTint="@color/pinkcolor"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                />






        </LinearLayout> <!--eita holo agent er linear-->




    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not yet registered?"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@color/black"
        android:textSize="15sp"

        />
        <TextView
            android:id="@+id/signuplink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp Now"
            android:textStyle="normal|bold"
            android:textColor="#1976D2"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            />

    </LinearLayout>




</LinearLayout>  <!--main Linear layout-->