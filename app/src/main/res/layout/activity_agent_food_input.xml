<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agent_food_input"
    android:padding="15dp"
    android:background="@drawable/foodbginput"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="38dp"
            android:src="@drawable/backbutton2"
            android:id="@+id/agent_food_input_backbtn"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="স্বাগতম"
            android:textSize="60sp"
            android:textStyle="bold"
            android:textColor="@color/darkred"
            android:layout_marginTop="15dp"
            android:layout_marginStart="95dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/food_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="25dp"
                    android:drawableStart="@drawable/food_icon"
                    android:drawablePadding="10dp"
                    android:hint="Item Name"
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/food_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="25dp"
                    android:drawableStart="@drawable/ic_baseline_price_change_24"
                    android:drawablePadding="10dp"
                    android:hint="Price"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/food_provider_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="25dp"
                    android:drawableStart="@drawable/profile_icon"
                    android:drawablePadding="10dp"
                    android:hint="Provider Name"
                    android:inputType="textPersonName" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="25dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select A IMAGE TO SHOW"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/foodViewimage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/imageup"

                        />


                </LinearLayout>


                <Button
                    android:id="@+id/foodsubmitbtn"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Insert" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>






</LinearLayout>